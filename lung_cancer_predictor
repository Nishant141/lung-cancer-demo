    <script>
        // Simulated model prediction based on the trained Random Forest model
        function predictRisk(formData) {
            // This is a simplified version of your trained model
            // In a real application, you would load the actual model weights
            
            let riskScore = 0;
            const features = {};
            
            // Age factor (normalized)
            const age = parseInt(formData.age);
            const ageScore = Math.min(age / 100, 1);
            features['Age'] = ageScore * 0.15;
            riskScore += features['Age'];
            
            // Gender factor
            const genderScore = formData.gender === 'Male' ? 0.6 : 0.4;
            features['Gender'] = genderScore * 0.1;
            riskScore += features['Gender'];
            
            // Pack years (most important factor)
            const packYears = parseFloat(formData.pack_years);
            const packYearsScore = Math.min(packYears / 50, 1);
            features['Pack Years'] = packYearsScore * 0.25;
            riskScore += features['Pack Years'];
            
            // Environmental exposures
            const radonScore = formData.radon_exposure === 'High' ? 0.8 : 
                             formData.radon_exposure === 'Moderate' ? 0.5 : 0.2;
            features['Radon Exposure'] = radonScore * 0.12;
            riskScore += features['Radon Exposure'];
            
            const asbestosScore = formData.asbestos_exposure === 'Yes' ? 0.8 : 0.2;
            features['Asbestos Exposure'] = asbestosScore * 0.1;
            riskScore += features['Asbestos Exposure'];
            
            const secondhandScore = formData.secondhand_smoke_exposure === 'Yes' ? 0.7 : 0.3;
            features['Secondhand Smoke'] = secondhandScore * 0.08;
            riskScore += features['Secondhand Smoke'];
            
            // Medical history
            const copdScore = formData.copd_diagnosis === 'Yes' ? 0.9 : 0.2;
            features['COPD'] = copdScore * 0.12;
            riskScore += features['COPD'];
            
            const alcoholScore = formData.alcohol_consumption === 'Heavy' ? 0.7 :
                               formData.alcohol_consumption === 'Moderate' ? 0.4 : 0.2;
            features['Alcohol Consumption'] = alcoholScore * 0.05;
            riskScore += features['Alcohol Consumption'];
            
            const familyScore = formData.family_history === 'Yes' ? 0.8 : 0.3;
            features['Family History'] = familyScore * 0.08;
            riskScore += features['Family History'];
            
            return { riskScore, features };
        }

        function getRiskLevel(score) {
            if (score < 0.3) return { level: 'Low', class: 'risk-low' };
            if (score < 0.6) return { level: 'Moderate', class: 'risk-medium' };
            return { level: 'High', class: 'risk-high' };
        }

        function generateRecommendations(formData, riskLevel) {
            const recommendations = [];
            
            if (parseFloat(formData.pack_years) > 20) {
                recommendations.push('Consider smoking cessation programs and regular lung cancer screening');
            }
            
            if (formData.copd_diagnosis === 'Yes') {
                recommendations.push('Monitor COPD progression and consider pulmonary function tests');
            }
            
            if (formData.radon_exposure === 'High' || formData.asbestos_exposure === 'Yes') {
                recommendations.push('Evaluate workplace/environmental exposure reduction strategies');
            }
            
            if (formData.family_history === 'Yes') {
                recommendations.push('Consider genetic counseling for family members');
            }
            
            if (riskLevel === 'High') {
                recommendations.push('Schedule immediate consultation with pulmonologist');
                recommendations.push('Consider low-dose CT screening based on current guidelines');
            } else if (riskLevel === 'Moderate') {
                recommendations.push('Schedule regular follow-up appointments');
                recommendations.push('Maintain healthy lifestyle and monitor symptoms');
            } else {
                recommendations.push('Continue regular health check-ups');
                recommendations.push('Maintain healthy lifestyle habits');
            }
            
            if (formData.alcohol_consumption === 'Heavy') {
                recommendations.push('Consider alcohol reduction programs');
            }
            
            return recommendations;
        }

        function displayResults(results) {
            const { riskScore, features } = results;
            const risk = getRiskLevel(riskScore);
            
            // Display risk level
            const riskLevelElement = document.getElementById('riskLevel');
            riskLevelElement.textContent = `${risk.level} Risk`;
            riskLevelElement.className = `risk-level ${risk.class}`;
            
            // Display risk explanation
            const explanation = document.getElementById('riskExplanation');
            explanation.textContent = `Based on the analysis of risk factors, this patient has a ${(riskScore * 100).toFixed(1)}% probability of developing lung cancer.`;
            
            // Display feature importance
            const featureContainer = document.getElementById('featureImportance');
            featureContainer.innerHTML = '';
            
            const sortedFeatures = Object.entries(features).sort((a, b) => b[1] - a[1]);
            
            sortedFeatures.forEach(([feature, importance]) => {
                const featureBar = document.createElement('div');
                featureBar.className = 'feature-bar';
                featureBar.innerHTML = `
                    <div class="feature-name">${feature}</div>
                    <div class="feature-value">
                        <div class="feature-fill" style="width: ${importance * 100}%"></div>
                    </div>
                    <div class="feature-score">${(importance * 100).toFixed(1)}%</div>
                `;
                featureContainer.appendChild(featureBar);
            });
            
            // Generate recommendations
            const recommendations = generateRecommendations(
                Object.fromEntries(new FormData(document.getElementById('predictionForm'))),
                risk.level
            );
            
            const recommendationsList = document.getElementById('recommendations');
            recommendationsList.innerHTML = '';
            recommendations.forEach(rec => {
                const li = document.createElement('li');
                li.textContent = rec;
                recommendationsList.appendChild(li);
            });
            
            // Show results
            document.getElementById('resultsContent').classList.remove('hidden');
        }

        document.getElementById('predictionForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            // Hide initial message and show loading
            document.getElementById('initialMessage').classList.add('hidden');
            document.getElementById('resultsContent').classList.add('hidden');
            document.getElementById('loadingSection').classList.remove('hidden');
            
            // Get form data
            const formData = Object.fromEntries(new FormData(this));
            
            // Simulate processing time
            setTimeout(() => {
                const results = predictRisk(formData);
                document.getElementById('loadingSection').classList.add('hidden');
                displayResults(results);
            }, 2000);
        });
    </script>
</body>
